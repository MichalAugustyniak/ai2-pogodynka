{% extends 'base.html.twig' %}

{% block title %}Measurement{% endblock %}

{% block body %}
    <h1>Measurement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ measurement.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ measurement.date ? measurement.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Max_celsius</th>
                <td>{{ measurement.maxCelsius }}</td>
            </tr>
            <tr>
                <th>Min_celsius</th>
                <td>{{ measurement.minCelsius }}</td>
            </tr>
            <tr>
                <th>Pressure_hpa</th>
                <td>{{ measurement.pressureHpa }}</td>
            </tr>
            <tr>
                <th>Wind_speed_kmh</th>
                <td>{{ measurement.windSpeedKmh }}</td>
            </tr>
            <tr>
                <th>Wind_direction</th>
                <td>{{ measurement.windDirection }}</td>
            </tr>
            <tr>
                <th>Humidity_percent</th>
                <td>{{ measurement.humidityPercent }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_measurement_index') }}">back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_measurement_edit', {'id': measurement.id}) }}">edit</a>

        {{ include('measurement/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
